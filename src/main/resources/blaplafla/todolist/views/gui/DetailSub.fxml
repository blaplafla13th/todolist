                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="detail" text="Detail">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
    </GridPane>
    <GridPane layoutX="9.0" layoutY="64.0" prefHeight="30.0" prefWidth="429.0" AnchorPane.leftAnchor="9.0"
              AnchorPane.rightAnchor="9.0">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"/>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"/>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"/>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button fx:id="edit" mnemonicParsing="false" onAction="#edit" prefHeight="30.0" prefWidth="80.0" text="Edit"
                GridPane.columnIndex="2"/>
        <Button fx:id="toggle" mnemonicParsing="false" onAction="#toggle" prefHeight="30.0" prefWidth="80.0"
                text="Toggle" GridPane.columnIndex="1"/>
        <Button fx:id="delete" mnemonicParsing="false" onAction="#delete" prefHeight="30.0" prefWidth="80.0"
                text="Delete"/>
        <Button fx:id="refresh" mnemonicParsing="false" onAction="#addData" prefHeight="30.0" prefWidth="80.0"
                text="Refresh" GridPane.columnIndex="3"/>
    </GridPane>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="702.0" prefWidth="447.0"
            style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/18"
            fx:controller="blaplafla.todolist.views.gui.Undone">
    <ListView fx:id="listViewTask" layoutX="9.0" layoutY="110.0" prefHeight="518.0" prefWidth="429.0"
              AnchorPane.leftAnchor="9.0" AnchorPane.rightAnchor="9.0"/>
    <GridPane layoutX="9.0" layoutY="628.0" prefHeight="29.0" prefWidth="365.0" AnchorPane.leftAnchor="9.0"
              AnchorPane.topAnchor="628.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label fx:id="prev" onMouseClicked="#prev" text="Prev">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="next" onMouseClicked="#next" text="Next" textAlignment="RIGHT" GridPane.columnIndex="1">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
    </GridPane>
    <GridPane layoutX="14.0" layoutY="21.0" prefHeight="30.0" prefWidth="409.0" AnchorPane.leftAnchor="9.0"
              AnchorPane.rightAnchor="9.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label fx:id="undone" text="Undone list">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
        <Button fx:id="refresh" mnemonicParsing="false" onAction="#addData" text="Refresh"
                GridPane.columnIndex="1"/>
    </GridPane>
    <ButtonBar layoutX="9.0" layoutY="66.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="30.0" prefWidth="429.0"
               AnchorPane.leftAnchor="9.0" AnchorPane.rightAnchor="9.0">
        <buttons>
            <Button fx:id="detail" mnemonicParsing="false" onAction="#detail" text="Detail"/>
            <Button fx:id="toggle" mnemonicParsing="false" onAction="#toggle" text="Toggle"/>
            <Button fx:id="delete" mnemonicParsing="false" onAction="#delete" text="Delete"/>
            <Button fx:id="add" mnemonicParsing="false" onAction="#add" text="Add"/>
        </buttons>
    </ButtonBar>
</AnchorPane>
